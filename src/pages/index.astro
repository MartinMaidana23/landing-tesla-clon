---
import LandingHeader from '../components/LandingHeader.astro';
import Layout from '../layouts/Layout.astro';
import Model3Section from '../components/Model3Section.astro';
import HeroSection from '../components/HeroSection.astro';
import ModelYSection from '../components/ModelYSection.astro';
import ModelSSection from '../components/ModelSSection.astro';
import ModelXSection from '../components/ModelXSection.astro';
import SolarPanelSection from '../components/SolarPanelSection.astro';
import SolarRoofSection from '../components/SolarRoofSection.astro';
import PowerwallSection from '../components/PowerwallSection.astro';
import AccessoriesSection from '../components/AccessoriesSection.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Welcome to Tesla">
	<LandingHeader/>
	<main class="snap-y snap-mandatory  relative w-full h-screen overflow-auto scroll-smooth overflow-x-hidden" >
		<div class="snap-center">
			<HeroSection/>
		</div>
		<div class="snap-center">
			<Model3Section/>
		</div>
		<div class="snap-center">
			<ModelYSection/>
		</div>
		<div class="snap-center">
			<ModelSSection/>
		</div>
		<div class="snap-center">
			<ModelXSection/>
		</div>
		<div class="snap-center">
			<SolarPanelSection/>
		</div>
		<div class="snap-center">
			<SolarRoofSection/>
		</div>
		<div class="snap-center">
			<PowerwallSection/>
		</div>
		<div class="snap-center lg:snap-end">
			<AccessoriesSection/>
			<Footer/>
		</div>
		
	</main>
</Layout>
	